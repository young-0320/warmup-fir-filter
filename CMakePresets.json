{
    "version": 3,
    "configurePresets": [
        {
            "name": "default-build",
            "displayName": "Default Build (Project Root)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_FIR_TESTS": "ON"
            }
        },
        {
            "name": "fir-1d-custom",
            "displayName": "1D FIR Filter (Sub-folder Build)",
            "binaryDir": "${sourceDir}/fir_1d/sim/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_FIR_TESTS": "ON"
            }
        },
        {
            "name": "사용자 지정 구성 사전 설정",
            "displayName": "사용자 지정 구성 사전 설정",
            "description": "Ninja 생성기, 빌드 및 설치 디렉터리 설정",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-all-default",
            "configurePreset": "default-build"
        },
        {
            "name": "build-test-fir-1d-default",
            "configurePreset": "default-build",
            "targets": [
                "test_fir_1d"
            ]
        },
        {
            "name": "build-test-fir-1d-custom",
            "configurePreset": "fir-1d-custom",
            "targets": [
                "test_fir_1d"
            ]
        }
    ]
}